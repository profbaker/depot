<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class=" <%= controller.controller_name %> ">
  <div id="banner">
    <%= form_tag store_path, class: 'locale' do %>
       <%= select_tag 'set_locale',
         options_for_select(LANGUAGES, I18n.locale.to_s),
         onchange: 'this.form.submit()' %>
        <%= submit_tag 'submit' %>
        <%= javascript_tag "$('.locale input').hide()" %>
    <% end %>
    <%= image_tag("logo.png") %>
    <%= @page_title || t('.title') %>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">

        <% if @cart %>
            <p><%= session[:cart_id] %></p>
          <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
            <%= render @cart %>
          <% end %>
        <% end %>

      </div>

      <div id="spotlight">
        <h4><%= t('.product_ad_title') %></h4>
        <%= image_tag(Product.latest.image_url) %>
        <p><%= Product.latest.title %><br>
        <%= number_to_currency(Product.latest.price) %></p>
      </div>
      <ul>
        <li><a href="<%= store_url %>"><%= t('.home') %></a></li>

        <% if session[:user_id] %>
          <li><%= link_to 'Orders', orders_path %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users', users_path %></li>
        <% end %>
      </ul>

      <%= hidden_div_if(!session[:user_id], id: 'login_welcome') do %>
          <p>Logged in as <%= @logged_in_user_name %>.</p>
      <% end %>

      <% if session[:user_id] %>
        <%= button_to 'Logout', logout_path, method: :delete %>
      <% else %>
        <%= button_to 'Login', login_path, method: :get %>
      <% end %>

    </div>
    <div id="main">

      <%= yield %>

    </div>
  </div>

</body>
</html>
